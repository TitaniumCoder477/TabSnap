{
	"name": "TabSnap - Snapshots of your tablife",
	"version": "2.0",
	"description": "TabSnap is a simple, robust, open-source backup tool for your open tabs!",
	"permissions": ["storage","tabs"],
	"background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"24": "icon24.png",
			"32": "icon32.png",
			"64": "icon64.png",
			"128": "icon128.png",
			"256": "icon256.png"
		},
		"default_title": "TabSnap",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon16.png",
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"manifest_version": 2
}
